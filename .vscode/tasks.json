{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Flask App",
			"type": "shell",
			"command": "source venv/bin/activate && flask run --port=5080",
			"group": "build",
			"isBackground": true
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "source venv/bin/activate && python -m pytest",
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		}
	]
}